{
  "rules": {
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid",
        "habits": {
          ".validate": "newData.isString() || newData.hasChildren()",
          ".indexOn": ["createdAt", "frequency"]
        },
        "logs": {
          ".validate": "newData.isString() || newData.hasChildren()",
          ".indexOn": ["date", "habitId", "completed"]
        },
        "reflections": {
          ".validate": "newData.isString() || newData.hasChildren()",
          ".indexOn": ["date"]
        }
      }
    }
  }
}
